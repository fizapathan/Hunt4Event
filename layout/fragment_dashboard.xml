<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.finalproject.MainPage">

        <!-- TODO: Update blank fragment layout -->
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="55dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="fill_horizontal">

                        <ImageView
                            android:paddingTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/heritage"/>


                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:fontFamily="Over There"
                            android:paddingBottom="0dp"
                            android:paddingLeft="12dp"
                            android:paddingTop="12dp"
                            android:text="@string/event_button5"
                            android:textColor="@color/colorPrimaryText"
                            android:textStyle="bold" />
                        <!--<Button
                            android:id="@+id/button5"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:textAllCaps="false"
                            android:background="@android:color/transparent"
                            android:text="@string/event_button2"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorPrimaryText"
                            android:onClick="onClick"
                            android:layout_gravity="start" />-->

                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="fill_horizontal">

                        <ImageView
                            android:paddingTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/michael"/>

                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:fontFamily="Over There"
                            android:paddingBottom="0dp"
                            android:paddingLeft="12dp"
                            android:paddingTop="12dp"
                            android:text="@string/event_button6"
                            android:textColor="@color/colorPrimaryText"
                            android:textStyle="bold" />
                       <!-- <Button
                            android:id="@+id/button6"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:textAllCaps="false"
                            android:background="@android:color/transparent"
                            android:text="@string/event_button4"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorPrimaryText"
                            android:onClick="onClick"
                            android:layout_gravity="start" />-->

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>


</FrameLayout>
