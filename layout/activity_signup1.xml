<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_gradient"
    android:paddingRight="18dp"
    android:paddingLeft="18dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.AndroidStudioProjects.FinalProject.signup1">


    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="#FFF"
        android:textColorHint="#fff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db"/>

    <EditText
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:textColor="#FFF"
        android:hint="Email"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:textColorHint="#fff"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_mail_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db"/>

    <EditText
        android:id="@+id/edt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:textColor="#FFF"
        android:hint="Password"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:textColorHint="#fff"
        android:maxLines="1"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db"/>

    <Button
        android:id="@+id/bt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f16f7d"
        android:textColor="#FFF"
        android:text="sign up"
        android:padding="16dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        style = "@style/Base.TextAppearance.AppCompat.Body1" />

</LinearLayout>
