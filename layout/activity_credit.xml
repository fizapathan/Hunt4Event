<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2E1BD"
    android:paddingRight="18dp"
    android:paddingLeft="18dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.AndroidStudioProjects.FinalProject.credit"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uc1"
        android:layout_alignBottom="@+id/uc1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="80dp"
        android:text="User"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="119dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp" />

    <TextView
        android:id="@+id/uc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/app_bar"
        android:layout_marginEnd="98dp"
        android:layout_marginTop="62dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="119dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="98dp" />

    <View
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/textView3"
        android:layout_height="1dp"
        android:background="#f9d7db"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="23dp"
        android:text="Date "
        android:textStyle="bold"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="179dp" />

    <TextView
        android:id="@+id/uc2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/uc1"
        android:text="TextView"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="179dp"
        android:layout_alignLeft="@+id/uc1" />

    <View
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/textView5"
        android:layout_height="1dp"
        android:background="#f9d7db"/>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/uc2"
        android:layout_marginTop="29dp"
        android:text="Event"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="240dp"
        android:layout_alignRight="@+id/textView3" />

    <TextView
        android:id="@+id/uc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/uc2"
        android:text="TextView"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="240dp"
        android:layout_alignLeft="@+id/uc2" />

    <View
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/textView7"
        android:layout_height="1dp"
        android:background="#f9d7db"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="35dp"
        android:text="Price"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="298dp"
        android:layout_alignLeft="@+id/textView3" />

    <TextView
        android:id="@+id/uc4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/uc3"
        android:text="TextView"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="298dp"
        android:layout_alignLeft="@+id/uc3" />

    <View
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/textView9"
        android:layout_height="1dp"
        android:background="#f9d7db"/>

    <EditText
        android:id="@+id/ccet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Enter Card Number"
        android:inputType="number"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="348dp"
        android:layout_alignLeft="@+id/textView9" />

    <Spinner
        android:id="@+id/csp1"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ccet1"
        android:layout_marginTop="33dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="429dp"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:id="@+id/csp2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/csp1"
        android:layout_marginEnd="14dp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="429dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp" />

    <EditText
        android:id="@+id/ccet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/csp1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Cvv Number"
        android:inputType="number"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="465dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="pay"
        android:text="Pay"
        android:textColor="#FFF"
        android:background="#e9859f"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="520dp" />

</RelativeLayout>
