<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_login_gradient"
    tools:context="com.example.AndroidStudioProjects.FinalProject.subcategory">

    <Spinner
        android:id="@+id/sctg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="90dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="100dp" />

    <EditText
        android:id="@+id/sbctet1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_category_white"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Add Subcategory"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="#FFF"
        android:textColorHint="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/sctg1"
        tools:layout_editor_absoluteX="7dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:id="@+id/sbctbt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f16f7d"
        android:textColor="#FFF"
        android:text="ADD"
        android:padding="16dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        style = "@style/Base.TextAppearance.AppCompat.Body1" />

</LinearLayout>
