<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.AndroidStudioProjects.FinalProject.addgallery">

    <EditText
        android:id="@+id/ged1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:hint="Image Name"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/giv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:layout_marginStart="33dp"
        android:text="Add"
        android:textColor="#FFF"
        android:background="#f16f7d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="33dp" />

    <Button
        android:id="@+id/gb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:text="Show"
        android:textColor="#FFF"
        android:background="#f16f7d"
        android:onClick="show"
        app:layout_constraintBottom_toBottomOf="@+id/gb1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gb1"
        android:layout_marginRight="27dp" />

    <ImageView
        android:id="@+id/giv2"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="130dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerCrop"

        app:layout_constraintBottom_toTopOf="@+id/gb2"
        app:layout_constraintEnd_toEndOf="@+id/ged1"
        android:layout_marginRight="156dp" />

    <!--
            app:srcCompat="@drawable/ic_gallery"

    app:srcCompat="@mipmap/ic_launcher_round"
    app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_toStartOf="parent"
        app:layout_constraintRight_toEndOf="parent"-->
</android.support.constraint.ConstraintLayout>
